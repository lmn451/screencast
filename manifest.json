{
  "manifest_version": 3,
  "name": "CaptureCast",
  "description": "Simple, privacy-focused screen recording: This Tab, Window, or Entire Screen.",
  "version": "0.2.0",
  "action": {
    "default_title": "CaptureCast",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabCapture",
    "offscreen",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "preview.html",
        "overlay.js",
        "recorder.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
